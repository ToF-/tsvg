(defun triangle (size turtle)
  (execute `(
             (DOWN)
             (FORWARD ,size)
             (RIGHT 120)
             (FORWARD ,size)
             (RIGHT 120)
             (FORWARD ,size)
             (RIGHT 120)
             (UP)
             ) turtle))

